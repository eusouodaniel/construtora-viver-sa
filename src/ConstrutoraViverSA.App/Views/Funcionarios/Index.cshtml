<div class="text-center">
    @{
        ViewData["Title"] = "Funcionários";
    }
    <h1>@ViewData["Title"]</h1><br />
    <div class="card">
        <img class="card-img-top" src="~/img/funcionarios.adicionar.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Cadastro de Funcionários</h5>
            <a class="btn btn-success" asp-area="" asp-controller="Funcionarios" asp-action="AdicionarFuncionario">Cadastrar</a>
        </div>
    </div>
    <div class="card">
        <img class="card-img-top" src="~/img/funcionarios.editar.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Edição de Funcionários</h5>
            <a class="btn btn-success" asp-area="" asp-controller="Funcionarios" asp-action="EditarFuncionario">Editar</a>
        </div>
    </div>
    <div class="card">
        <img class="card-img-top" src="~/img/funcionarios.relatorios.png" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Relatório de Funcionários</h5>
            <a class="btn btn-success" asp-area="" asp-controller="Funcionarios" asp-action="RelatorioFuncionario">Relatórios</a>
        </div>
    </div>
</div>