@model RelatorioModel
<div>
    <h2 class="text-center">Relatório de Materiais no Estoque</h2><br />

    @if (Model.Materiais != null && Model.Materiais.Any())
    {
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <b>Id</b>
                </div>
                <div class="col-sm">
                    <b>Nome</b>
                </div>
                <div class="col-sm">
                    <b>Descrição</b>
                </div>
                <div class="col-sm">
                    <b>Tipo</b>
                </div>
                <div class="col-lg">
                    <b>Valor</b>
                </div>
                <div class="col-sm">
                    <b>Data de Validade</b>
                </div>
            </div>
            @foreach (var material in Model.Materiais)
            {
                <div class="row">
                    <div class="col-sm">
                        @material.Id
                    </div>
                    <div class="col-sm">
                        @material.Nome
                    </div>
                    <div class="col-sm">
                        @material.Descricao
                    </div>
                    <div class="col-sm">
                        @material.Tipo
                    </div>
                    <div class="col-lg">
                        @material.Valor
                    </div>
                    <div class="col-sm">
                        @material.DataValidade.GetValueOrDefault().Date
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="container">
            <br />
            <div class="alert alert-secondary" role="alert">
                <p>Não foi possível gerar seu relatório ou você não possui dados cadastrados!</p>
            </div>
        </div>
    }
    <br />
    <a type="button" asp-area="" asp-controller="Estoque" asp-action="Index" class="btn btn-outline-secondary btn-block">Voltar</a>
</div>
