@model MaterialModel

<div>
    <h2 class="text-center">Edição de Materiais no Estoque</h2>
    <form asp-controller="Estoque" asp-action="BuscarMaterial">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Nome</label>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model != null)
    {
        <form asp-controller="Estoque" asp-action="EditarMaterial">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Nome</label>
                    <input type="text" class="form-control" for="@Model.Nome">
                </div>
                <div class="form-group col-md-6">
                    <label>Descrição</label>
                    <input type="text" class="form-control" for="@Model.Descricao">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Tipo</label>
                    <select class="form-control" for="@Model.Tipo">
                        <option value="0">Madeira</option>
                        <option value="1">Telha</option>
                        <option value="2">Tijolo</option>
                        <option value="3">Cimento</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Valor</label>
                    <input type="number" class="form-control" for="@Model.Valor">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Data de Validade</label>
                    <input type="date" class="form-control" for="@Model.DataValidade">
                </div>
            </div><br />
            <button type="submit" class="btn btn-outline-success btn-block">Editar</button>
        </form>
    }
    <br />
    <a type="button" asp-area="" asp-controller="Estoque" asp-action="Index" class="btn btn-outline-secondary btn-block">Voltar</a>

</div>