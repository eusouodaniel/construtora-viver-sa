@model ObraModel

<div>
    <h2 class="text-center">Edição de Obras</h2>
    <form asp-controller="Obras" asp-action="BuscarObra">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Nome da Obra</label>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Buscar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @if (Model != null)
    {
        <form asp-controller="Obras" asp-action="EditarObra">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Nome da Obra</label>
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label>Endereço</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Tipo</label>
                    <select class="form-control">
                        <option value="0">Residencial</option>
                        <option value="1">Comercial</option>
                        <option value="2">Ambos</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Descrição</label>
                    <input type="text" class="form-control" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Valor</label>
                    <input type="number" class="form-control" />
                </div>
                <div class="form-group col-md-6">
                    <label>Prazo de Conclusão</label>
                    <input type="date" class="form-control" />
                </div>
            </div><br />
            <button type="submit" class="btn btn-outline-success btn-block">Editar</button>
        </form>
    }
    <br />
    <a type="button" asp-area="" asp-controller="Obras" asp-action="Index" class="btn btn-outline-secondary btn-block">Voltar</a>
</div>